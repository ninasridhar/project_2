%p#notice= notice
#user{data: {value: "#{current_user.id}"}} 
%p
  = image_tag @photo.uploaded_image.url, class: "photo-show", id: 'votes'

.votes
  Likes:
  .no_votes
    = @votes
  - if @voted_already != true
    .thumbs
      %i.glyphicon.glyphicon-thumbs-up#up{data: { vote: 1}}
      %i.glyphicon.glyphicon-thumbs-down#down{data: { vote: -1}}

%p
  %b Name:
  = @photo.name
%p
  %b Description:
  = @photo.description
%p
  %b Taken By:
  = @photo.user.name
%p 
  %b Added On:
  = @photo.created_at
%p
  %b Albums:
  - @photo.albums.each do |album|
    = album.name
%p
  %b Location:
  = @photo.location
%p
  %b Category:
  = @photo.category.name

= link_to 'Edit', edit_photo_path(@photo)
\|
= link_to 'Back', photos_path

- if current_user
  %br
  %br
  %input#username
  %br
  %textarea#comment{placeholder: 'Comments'}
  %br
  %i.glyphicon.glyphicon-pencil#pencil
  #pencil2  
%br

.comment

