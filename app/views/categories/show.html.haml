%p#notice= notice

.formcentre
  %h1= @category.name
-if @category.photos != []
  - @category.photos.each do |p|
    = link_to p do
      .boxI.imagetext
        .imageblur
          = image_tag p.uploaded_image.thumb
- else 
  .formcentre
    %h2 
      Sorry, there aren't any photos tagged
      = @category.name
      yet.
    = link_to "Add one here", new_photo_path
