-if current_user != nil
  #user{data: {value: "#{current_user.id}"}}

/ - if @subscription
/   #subscription{data: {value: "#{@subscription}"}}

.profileshowpage
  = image_tag @user.user_image.thumb, :class => "userimage"

  .user_info
    %p
      %h1 
        = @user.name
        (
        = @user.username
        )
    - if @user.id != current_user.id
      .stars
        - if @following == true    
          %i.glyphicon.glyphicon-star#unfollow
        - else 
          %i.glyphicon.glyphicon-star#star
    %p
      - if @user.subscribers != []  
        Subscribers:
        - @user.subscribers.each do |sub|
          %li= sub.username
    %p
      %b About Me:
      = @user.bio
    %p
      %b Hometown:
      = @user.hometown
    %p
      %b Member since:
      = @user.created_at.strftime("%a %d %B %Y")
    - if current_user.id == @user.id
      %p= link_to 'Edit Profile', edit_user_registration_path

%ul.drawers 
  %li
    %h5.profile
      Albums
    %p
      - current_user.albums.each do |album|
        - if album.photos.present?
          = link_to album do 
            = image_tag album.photos.sample.uploaded_image.thumb 
        - else 
          = link_to new_photo_path do
            = image_tag "nopic.png" 
    %h5.profile
      Photos
    %p
      - current_user.photos.each do |photo|
        = link_to photo do
          = image_tag photo.uploaded_image.thumb 
    
  