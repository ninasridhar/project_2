.formcentre  
  %h2 Sign Up
  = link_to (image_tag("Red-signin_Google_base_44dp.png")),
    user_omniauth_authorize_path(:google_oauth2)
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = devise_error_messages!
    .field 
      = f.label :name
      %br/
      = f.text_field :name, autofocus: true, :class => "text_field"
    .field
      = f.label :email
      %br/
      = f.email_field :email, :class => "text_field"
    .field
      = f.label :password
      - if @validatable
        %em
          (#{@minimum_password_length} characters minimum)
      %br/
      = f.password_field :password, autocomplete: "off", :class => "text_field"
    .field
      = f.label :password_confirmation
      %br/
      = f.password_field :password_confirmation, autocomplete: "off", :class => "text_field"
    .field
      = f.label :hometown
      %br/
      = f.text_field :hometown, :class => "text_field"
    .field
      = f.label :bio
      %br/
      = f.text_area :bio, :class => "text_field"
    .actions
      = f.submit "Sign up"

